{
  "manifest_version": "0.3",
  "name": "earthclassmail",
  "display_name": "Earth Class Mail",
  "version": "1.0.1",
  "description": "Access your Earth Class Mail virtual mailbox. View mail, request scans, and manage pieces.",
  "author": {
    "name": "Jonathan Siegel"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/usiegj00/earthclassmail-mcp.git"
  },
  "homepage": "https://github.com/usiegj00/earthclassmail-mcp",
  "support": "https://github.com/usiegj00/earthclassmail-mcp/issues",
  "license": "MIT",
  "keywords": ["mail", "virtual-mailbox", "earth-class-mail"],
  "server": {
    "type": "node",
    "entry_point": "dist/index.js",
    "mcp_config": {
      "command": "npx",
      "args": ["-y", "@usiegj00/earthclassmail-mcp"],
      "env": {
        "EARTHCLASSMAIL_API_KEY": "${user_config.api_key}"
      }
    }
  },
  "user_config": {
    "api_key": {
      "type": "string",
      "title": "API Key",
      "description": "Your Earth Class Mail API key. Get it from: Settings → Integrations → Generate Key",
      "sensitive": true,
      "required": true
    }
  },
  "tools": [
    {"name": "ecm_get_user", "description": "Get your account info"},
    {"name": "ecm_list_inboxes", "description": "List all your mailboxes"},
    {"name": "ecm_list_pieces", "description": "List mail in an inbox"},
    {"name": "ecm_get_piece", "description": "Get details and scanned content for a piece"},
    {"name": "ecm_list_recipients", "description": "List names on a mailbox"},
    {"name": "ecm_perform_action", "description": "Scan, shred, ship, archive mail"}
  ]
}
